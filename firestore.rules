rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders - allow authenticated users to create, read, and update their own orders
    match /orders/{orderId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if false; // Don't allow deleting orders
    }
    
    // Public product information (if you add products collection later)
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can modify products
    }
    
    // Cart data - allow authenticated users to manage their cart
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}